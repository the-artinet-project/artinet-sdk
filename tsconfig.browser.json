{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/browser",
    "declarationDir": "./dist/browser",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "entryPoints": ["./src/browser.ts"],
  "include": ["./src/browser.ts"],
  "exclude": [
    "dist",
    "tests",
    "examples",
    "**/*.test.ts",
    ".external",
    "src/index.ts"
  ]
}
